#!/usr/bin/env mkb
# Builder mkb file for the java portion of the RazerSDK extension on android
platform JAVA

files
{
    (source/android)
	RazerSDK.java
}

librarypath "$MARMALADE_ROOT/s3e/deploy/plugins/android/android.jar"
librarypath "$MARMALADE_ROOT/s3e/loader/android/s3e_release.jar"

librarypath "lib/android/pluginrazersdk-release.jar"
librarypath "lib/android/store-sdk-standard-release.jar"


option output-name=lib/android/RazerSDK.jar
